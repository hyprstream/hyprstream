# Optional: Expert knowledge configuration
export EXPERT_PROVIDER=openai                   # Default provider for expert queries (anthropic|openai|openrouter)
export EXPERT_MODEL=o1-preview                      # Model to use for expert knowledge queries

# Optional: Default provider settings
export DEFAULT_PROVIDER=openrouter               # Default LLM provider (anthropic|openai|openrouter)
export DEFAULT_MODEL=deepseek/deepseek-chat     # Default model name

# Optional: Development settings
export DEBUG=false                              # Enable debug logging
export COWBOY_MODE=no                        # Skip command approval prompts

